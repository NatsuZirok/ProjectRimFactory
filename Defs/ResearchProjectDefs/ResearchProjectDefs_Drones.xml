<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ResearchProjectDef>
    <defName>PRFDrones</defName>
    <label>Drones</label>
    <techLevel>Spacer</techLevel>
    <baseCost>2000</baseCost>
    <description>Allows your colony to build drone stations. You will need to research the individual work types that they can perform.</description>
    <prerequisites>
      <li>PRFGoldbachConjecture</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>5</researchViewX>
    <researchViewY>1</researchViewY>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>PRFDronesHauling</defName>
    <label>Drones: Hauling</label>
    <techLevel>Spacer</techLevel>
    <baseCost>1000</baseCost>
    <description>Allows your colony to put simple hauling AI on drones.</description>
    <prerequisites>
      <li>PRFDrones</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>6</researchViewX>
    <researchViewY>1</researchViewY>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>PRFDronesConstruction</defName>
    <label>Drones: Construction</label>
    <techLevel>Spacer</techLevel>
    <baseCost>1000</baseCost>
    <description>Allows your colony to put simple construction AI on drones. Also allows them to flick switches.</description>
    <prerequisites>
      <li>PRFDronesHauling</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>7</researchViewX>
    <researchViewY>1</researchViewY>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>PRFDronesCleaning</defName>
    <label>Drones: Cleaning</label>
    <techLevel>Spacer</techLevel>
    <baseCost>1000</baseCost>
    <description>Allows your colony to put simple cleaning AI on drones.</description>
    <prerequisites>
      <li>PRFDrones</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>6</researchViewX>
    <researchViewY>0</researchViewY>
  </ResearchProjectDef>
  <ResearchProjectDef>
    <defName>PRFDronesFirefighting</defName>
    <label>Drones: Firefighting</label>
    <techLevel>Spacer</techLevel>
    <baseCost>1000</baseCost>
    <description>Allows your drones to fight fires.</description>
    <prerequisites>
      <li>PRFDronesCleaning</li>
    </prerequisites>
    <requiredResearchBuilding>AIResearchBench</requiredResearchBuilding>
    <tab>Automation</tab>
    <researchViewX>7</researchViewX>
    <researchViewY>0</researchViewY>
  </ResearchProjectDef>
</Defs>